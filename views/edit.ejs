<%- include("partials/header") %>

  <div class="w-full min-h-screen bg-zinc-900 text-white flex items-center justify-center py-10 px-4">

    <div class="w-full max-w-md bg-zinc-800 rounded-xl shadow-lg p-6">

      <h2 class="text-xl font-semibold text-center mb-4">Edit Profile</h2>

      <!-- Error message -->
      <% if (typeof error !=="undefined" ) { %>
        <div class="bg-red-600 px-4 py-2 rounded-md text-center mb-3">
          <%= error %>
        </div>
        <% } %>

          <!-- Form -->
          <form action="/edit-profile-submit" method="POST" class="space-y-3">

            <div>
              <label class="text-sm text-zinc-300">Username</label>
              <input
                class="px-3 py-2 border border-zinc-700 rounded-md w-full bg-zinc-900 focus:outline-none focus:border-blue-500"
                type="text" name="username" value="<%= user.username %>" required>
            </div>

            <div>
              <label class="text-sm text-zinc-300">Bio</label>
              <textarea
                class="px-3 py-2 border border-zinc-700 rounded-md w-full bg-zinc-900 focus:outline-none focus:border-blue-500"
                name="bio" rows="3"><%= user.bio %></textarea>
            </div>

            <button type="submit" class="w-full bg-blue-600 py-2 rounded-md hover:bg-blue-700 transition">
              Save Changes
            </button>

          </form>

    </div>

  </div>

  <%- include("partials/footer") %>